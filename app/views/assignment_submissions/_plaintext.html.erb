<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">Main.hs</div>
      <div class="panel-body">
        <pre><code class="prettyprint"><% submission.body.split("\n").each_with_index do |line, index| %><span id="line-<%= index %>"> <%=line%></span><% end %></code></pre>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready( function () {
  $('html, body').animate({
        scrollTop: $(window.location.hash).offset().top - 100
    }, 200)
})
</script>