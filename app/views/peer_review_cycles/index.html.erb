<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Peer review cycles for <%= @assignment.name %></h2>

    <% @assignment.peer_review_cycles.each do |cycle| %>
      <h3><%= cycle.activation_time %>
        <% if cycle.activated %>
          <span class="label label-success">Activated</span>
        <% end %>
      </h3>
      <p>Anonymise: <%= cycle.anonymise %></p>
      <p>Distribution scheme: <%= cycle.distribution_scheme %></p>
      <p>Shut off submission: <%= cycle.shut_off_submission %></p>
      <p>Maximum mark: <%= cycle.maximum_mark %></p>
      <p>Activated: <%= cycle.activated %></p>
      <% unless cycle.activated %>
        <%= button_to "Activate",
                  assignment_cycle_activate_url(cycle.id, @assignment.id),
                    :class => "btn btn-danger" %>
      <% end %>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-body">
        <h3>Create new peer review cycle</h3>
        <%= form_for @peer_review_cycle, html: {:class => "form", :role => "form"},url: {action: "create"} do |f| %>

          <div class="form-group">
            <%= label_tag(:activation_time, "Activation time") %>
            <%= f.datetime_select(:activation_time, :class => "form-control") %>
          </div>

          <div class="form-group">
            <%= label_tag(:distribution_scheme, "Distribution scheme") %>
            <%= f.select(:distribution_scheme,
            options_for_select([
              ['Swap simultaneously', 'swap_simultaneously'],
              ['Send to previous', 'Send to previous']], "swap_simultaneously")) %>
          </div>

          <div class="form-group">
            <%= label_tag(:anonymise, "Anonymise") %>
            <%= f.check_box(:anonymise) %>
          </div>

          <div class="form-group">
            <%= label_tag(:shut_off_submission, "Shut off submission until they comment") %>
            <%= f.check_box(:shut_off_submission) %>
          </div>

          <div class="form-group">
            <%= label_tag(:maximum_mark, "Maximum mark") %>
            <%= f.text_field(:maximum_mark, :class => "form-control") %>
          </div>

          <%= f.submit("Create peer review cycle", :class => "btn btn-default") %>
        <% end %>
      </div>
    </div>
  </div>
</div>