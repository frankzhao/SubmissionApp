<h2>Courses</h2>

<% if current_user.is_admin_or_convenor? %>
<%= link_to("Create course", new_course_url) %>
<% end %>

<h3>Your courses</h3>

<ul>
  <% @user_courses.each do |course| %>
    <li>
      <%= link_to course.name, course_url(course) %>
      (<%= course.convenor.name %>)
    </li>
  <% end %>
</ul>

<hr>

<h3>Other courses</h3>
<ul>
  <% @other_courses.each do |course| %>
    <li>
      <%= link_to course.name, course_url(course) %>
      (<%= course.convenor.name %>)
    </li>
  <% end %>
</ul>