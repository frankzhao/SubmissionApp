<div class="row">
  <div class="col-sm-9 col-sm-offset-2">
    <h2>Courses</h2>

    <% if current_user.is_admin_or_convener? %>
    <%= link_to("Create course", new_course_url) %>
    <% end %>

    <h3>Your courses</h3>

    <ul>
      <% @user_courses.each do |course| %>
        <li>
          <%= link_to course.name, course_url(course) %>
          (<%= course.convener.name %>)
        </li>
      <% end %>
    </ul>

    <h3>Other courses</h3>
    <ul>
      <% @other_courses.each do |course| %>
        <li>
          <%= link_to course.name, course_url(course) %>
          (<%= course.convener.name %>)
          <% if current_user.is_admin || course.convener == current_user %>
            <%= button_to "Delete course", course_url(course), :method => :delete, :class => "btn btn-danger btn-xs" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>