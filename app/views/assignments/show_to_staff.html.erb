<div class="row">
  <div class="col-sm-5 col-sm-offset-2">

    <h2><%= @assignment.name %></h2>
  </div>

  <% if @relation == :convener %>
    <div class="col-sm-3">
      <div class="btn-group pull-right pull-down">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          Options <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Edit", edit_assignment_url(@assignment) %></li>
          <li><%= link_to "Download all marks as csv",
                "/assignments/#{@assignment.id}/marks.csv" %></li>
          <li><a href="#"><%= button_to "Start peer review",
                "/assignments/#{@assignment.id}/peer_review",
                  :class => "btn btn-warning" %></a></li>
          <li class="divider"></li>
          <li><%= link_to "Download all submissions as zip",
                "/assignments/#{@assignment.id}/submissions.zip" %></li>
        </ul>
      </div>
      <p></p>
      <p></p>
      <p></p>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <p><em>Assignment for
      <%= link_to(@assignment.group_type.name, @assignment.group_type) %></em>
    </p>

    <% if @assignment.due_date %>
      <p>Due at <%= @assignment.due_date %> </p>
    <% end %>




    <p>
      <%= @assignment.info.html_safe %>
    </p>

    <h3>Submissions</h3>

        <p><%= link_to "Download all submissions as zip",
                "/assignments/#{@assignment.id}/submissions.zip" %></p>

    <ul>
      <% @submissions.each do |submission| %>
        <li>
          <%= link_to("#{submission.user.name} (u#{submission.user.uni_id})",
                  assignment_assignment_submission_url(@assignment, submission)) %>
          <% unless submission.mark %>
            <span class="label label-default">(unmarked)</span>
          <% end %>
          <% unless submission.submission_permissions.empty? %>
            (visible to <%= submission.permitted_users.map(&:name).join(", ") %>)
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>