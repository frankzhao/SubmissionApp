<% content_for :title, "Edit " + @assignment.name %>
<div class="row">
  <div class="col-sm-9 col-sm-offset-2">
    <h2>Edit <%= link_to @assignment.name, @assignment %></h2>
  </div>
</div>

<%= form_for(@assignment, html: {:class => "form-horizontal", :role => "form"},
                            url: {action: "update"}) do |f| %>

  <%= render :partial => "form", :locals => {:f => f, :assignment => @assignment} %>

  <div class="row">
    <div class="col-sm-7 col-sm-offset-2">
      <div class="btn-group">
        <button type="button" class="btn btn-danger" data-toggle="modal"
                data-target="#myModal">
          Delete
        </button>

        <input class="btn btn-primary" type="submit" value="Update">
      </div>
    </div>
  </div>

<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Deleting <%= @assignment.name %></h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this assignment?

        If you delete the assignment, it will be gone forever, but all submissions to the assignment will remain in the directory <%= @assignment.path %> on the server, where your IT guy might be able to recover them for you. Comments and marks on the assignment are not recoverable.
      </div>
      <div class="modal-footer">
        <%= link_to "Delete assignment", @assignment, :method => :delete,
          :class => "btn btn-danger", :style => "float: left" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
