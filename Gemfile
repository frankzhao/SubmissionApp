source 'https://rubygems.org'

gem 'rails', '3.2.15'
gem 'rake', '10.1.1'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'brakeman', :require => false
  gem 'ruby-prof'
end

gem 'sqlite3'

gem 'jquery-rails'
gem 'net-ldap'
gem 'faker'
gem 'rubyzip'
gem 'whenever'
gem 'friendly_id'

group :test do
  gem 'capybara'
  gem 'guard-rspec'
  gem 'rspec-rails'
  gem 'launchy'
  gem 'database_cleaner'
end

